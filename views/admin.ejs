<%- include('templates/header') %>

<h2 class="mb-4">Admin Dashboard</h2>

<table class="table table-striped table-bordered align-middle">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>User Type</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(u => { %>
      <tr>
        <td><%= u.name %></td>
        <td><%= u.email %></td>
        <td><%= u.user_type %></td>
        <td>
          <% if (u.email === user.email) { %>
            <span class="text-muted">You</span>
          <% } else if (u.user_type === "admin") { %>
            <form action="/demote" method="POST" class="d-inline">
              <input type="hidden" name="email" value="<%= u.email %>" />
              <button type="submit" class="btn btn-warning btn-sm">Demote</button>
            </form>
          <% } else { %>
            <form action="/promote" method="POST" class="d-inline">
              <input type="hidden" name="email" value="<%= u.email %>" />
              <button type="submit" class="btn btn-success btn-sm">Promote</button>
            </form>
          <% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<a href="/" class="btn btn-secondary mt-4">Back to Home</a>

<%- include('templates/footer') %>
